body
  margin 0
  font-family: 'Roboto', sans-serif

*
  box-sizing border-box

.wrapper
  width 50%
  margin 0 auto
  padding 100px 0

.form
  border 1px solid #cccccc
  padding 30px
  background-color #f1f1f1
  color #222222
  label
    font-size 30px
    margin-bottom 10px
    display block
  .search-field
    width 100%
    position relative
    i
      position absolute
      left 0
      padding 15px
    input
      width 100%
      outline none
      border 0px
      border 1px solid #cccccc
      padding 10px
      padding-left 40px
      font-size 20px
      background-color #fafafa
